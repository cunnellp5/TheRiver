{
	"useTabs": true,
	"singleQuote": true,
	"semi": true,
	"tabWidth": 2,
	"printWidth": 100,
	"bracketSameLine": true,
	"trailingComma": "none",
	"plugins": ["prettier-plugin-svelte", "prettier-plugin-css-order"],
	"overrides": [
		{
			"files": "*.svelte",
			"options": { "parser": "svelte" }
		},
		{
			"files": "*.ts",
			"options": { "parser": "babel-ts" }
		}
	]
}
